root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = tab
indent_size = 3
ij_any_keep_line_breaks = true

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[*.json]
ij_json_array_wrapping = normal
ij_json_object_wrapping = normal
ij_json_keep_blank_lines_in_code = 1

[*.bat]
end_of_line = crlf
